<?xml version="1.0" encoding="UTF-8"?>


<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->


<bean name="emp"  class="BeanClass.Employee">
<property name="id" value="123"></property>
<property name="name" value="vikash"></property>
<property name="gender" value="male"></property>
</bean>


<!--constructor bean start-->

<bean name="emp1" class="BeanClass.Employee">
<constructor-arg name="id" value="1221"/>
<constructor-arg name="name" value="Satyam"/>
<constructor-arg name="gender" value="Male"/>
</bean>


</beans>