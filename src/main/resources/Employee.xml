<?xml version="1.0" encoding="UTF-8"?>


<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->


<bean name="add" class="BeanClass.Address">

<property name="city" value="Lucknow"></property>
<property name="state" value="up"></property>

</bean>





<!--constructor bean start-->

<bean name="emp12" class="BeanClass.Employee">
<constructor-arg name="id" value="1221"/>
<constructor-arg name="name" value="Satyam"/>
<constructor-arg name="gender" value="Male"/>
<constructor-arg name="address" ref="add"/>
</bean>
</beans>
